<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/one"
        android:background="#268bcb"
        android:layout_alignParentTop="true" >
       
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:animateLayoutChanges="true"
    android:clipChildren="true"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="35dp"
        android:text="*Your Name"
        android:textColor="#fff"
        android:textSize="18sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_alignRight="@+id/radioGroup1"
        android:layout_below="@+id/textView1"
        android:background="#ddffff"
        android:ems="10"
        android:hint="My Name"
        android:inputType="text"
        android:textColor="#ff9900" >
        
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/one"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="*What is Your Sex??"
        android:textColor="#fff"
        android:textSize="18sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/rh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/two"
        android:layout_toRightOf="@+id/textView5"
        android:background="#ddffff"
        android:ems="10"
        android:hint="+/-"
        android:inputType=""
        android:textColor="#ff9900" />

    <EditText
        android:id="@+id/rh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignRight="@+id/two"
        android:layout_toRightOf="@+id/imageButton1"
        android:background="#ddffff"
        android:ems="10"
        android:hint="+/-"
        android:textColor="#ff9900" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="10dp" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Male" 
            android:typeface="serif"
            android:textColor="#fff"
            />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:text="Female"
             android:typeface="serif"
             android:textColor="#fff"
             />
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginTop="19dp"
        android:hint="+"
        android:text="*RhFactor(+/-) :"
        android:textColor="#fff"
        android:textSize="18sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/two"
        android:layout_below="@+id/rh1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="17dp"
        android:text="*Your Partner Name"
        android:textColor="#fff"
        android:textSize="18sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:background="#ddffff"
        android:ems="10"
        android:hint="Partner Name"
        android:inputType="text"
        android:textColor="#ff9900" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/two"
        android:layout_marginTop="19dp"
        android:hint="-"
        android:text="*RhFactor(+/-) :"
        android:textColor="#fff"
        android:textSize="18sp"
        android:typeface="serif" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_below="@+id/rh2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:src="@drawable/marriage" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#0c6cbc"
        android:gravity="center"
        android:text="Check It Now.."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textSize="20sp"
        android:typeface="serif" />

</RelativeLayout>
   </ScrollView>
