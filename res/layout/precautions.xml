<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="#268bcb" >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="461dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_margin="10dp"
        android:scrollHorizontally="false"
        android:text="There are many Disorders of Blood. Some of them are--"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textSize="20sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#b5263a"
        android:gravity="center"
        android:text="Disorders of Blood"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1)Anemia:"
            android:textColor="#b5263a"
            android:typeface="serif"
            android:textSize="19sp"
            android:textColorHighlight="#fff"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="7dp"
            android:text="People with anemia have a low number of red blood cells.Severe anemia can cause fatigue ,pale skin and shortness of breath with exertion"
            android:textSize="18sp"
            android:typeface="sans"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2)(ITP):"
             android:textColor="#b5263a"
            android:typeface="serif"
            android:textSize="19sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Idiopathic Thromobocytopenic Purpura(ITP) A condition causing a persistently low number of platelets in the blood,there are no symptoms"
            android:textSize="18sp"
            android:layout_marginLeft="7dp"
            android:typeface="sans"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3)Leukaemi:"
            android:typeface="serif"
             android:textColor="#b5263a"
            android:textSize="19sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:layout_marginLeft="7dp"
            android:text="A form of blood cancer in which a white blood cell becomes malignant and multiplies inside bone marrow.Chemotherapy and/ or stem cell transplantation can be used to treat leukemia and may result in a cure"
            android:typeface="sans"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff" />


        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textSize="19sp"
             android:textColor="#b5263a"
            android:text="4)Thalassaemia:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:layout_marginLeft="7dp"
            android:text="This is a genetic form of anemia that mostly affects people of Mediterranean heritage.It may need regular blood transfusions to relieve anemia symptoms"
            android:typeface="sans"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5)Malaria:"
             android:textColor="#b5263a"
            android:typeface="serif"
            android:textSize="19sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:layout_marginLeft="7dp"
            android:text="A mosquito's bite transmits a parasite into a person's blood, where it infects red blood cell.Periodically ,the red blood cells rupture,causing fever,chills,and organ damage."
            android:typeface="sans"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff" />

        <Button
            android:id="@+id/marriage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:background="#0c6cbc"
            android:text="Marriage"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>

    </ScrollView>
